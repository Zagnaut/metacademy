extends layout

block content
  section.matchups.row
    #player.span6(ng-controller="ChampCtrl")
      label Player
      input(type="text",
        placeholder="Find a Champion...",
        ng-model="search",
        ng-change="change()",
        auto-complete)
      .well
        h4 {{champion.name}}
        h5 {{champion.title}}
        img(ng-src="{{champion.portrait}}")

    #opponent.span6(ng-controller="ChampCtrl")
      label Opponent
      input(type="text",
        placeholder="Find a Champion...",
        ng-model="search",
        ng-change="change()",
        auto-complete)
      .well
        h4 {{champion.name}}
        h5 {{champion.title}}
        img(ng-src="{{champion.portrait}}")

  section.row
    ul.nav.nav-tabs
      li
        a(href="#") Protips
      li
        a(href="#") Strong Against
      li
        a(href="#") Weak Against
      li
        a(href="#") Good With
