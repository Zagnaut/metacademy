extends layout

block content
  section.matchups.row
    #player.span6(ng-controller="ChampCtrl")
      .well
        form.search
          label Player
          input(type="text",
            placeholder="Enter Player Champion",
            ng-model="search",
            ng-change="change()",
            auto-complete)
        header.champion-name
          h3 {{champion.name}}
          p {{champion.title}}
        .champion-img
          img(ng-src="{{champion.imageUrl}}", ng-hide="!champion")
        .champion-abilities(ng-repeat="ability in champion.abilities")
          img(class="ability", ng-src="{{ability.icon}}")
          h5.ability {{ability._key}}

    #opponent.span6(ng-controller="ChampCtrl")
      .well
        form.search
          label Opponent
          input(type="text",
            placeholder="Enter Opponent Champion",
            ng-model="search",
            ng-change="change()",
            auto-complete,
            ng-cloak)
        header.champion-name
          h3 {{champion.name}}
          p {{champion.title}}
        .champion-img
          img(ng-src="{{champion.imageUrl}}", ng-hide="!champion")
        .champion-abilities(ng-repeat="ability in champion.abilities")
          img(class="ability", ng-src="{{ability.icon}}")
          h5.ability {{ability._key}}


  section.row
    .span12
      ul.nav.nav-pills.tabs
        li
          a(href="#") Protips
        li
          a(href="#") Strong Against
        li
          a(href="#") Weak Against
        li
          a(href="#") Good With

  section.protips-grid
    ul
      protip